<resources xmlns:tools="http://schemas.android.com/tools">
<!--    Dark theme-->
    <!-- Base application theme. -->
    <style name="Theme.AllYouCanEatApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!--Styles for Text-->
        <item name="android:textViewStyle">@style/AllText</item>
        <!--Styles for Buttons-->
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Below are the Text View Styles-->
    <!--These styles are given for all text view    -->
    <style name="AllText" parent="Widget.AppCompat.TextView">
        <item name = "android:textAlignment">center</item>
        <item name = "android:textAllCaps">true</item>
        <item name = "android:textColor">@color/white</item>
        <item name = "android:textSize">20sp</item>
        <item name = "android:textStyle">normal</item>
    </style>

    <!-- This Style is for title -->
    <style name="AllText.TitleStyle">
        <item name = "android:textColor">@color/TitleColor_dark</item>
        <item name = "android:textSize">34sp</item>
        <item name = "android:textStyle">bold</item>
    </style>

    <!-- This Style is for item and prices -->
    <style name="AllText.Item">
        <item name = "android:textColor">@color/ItemColor_dark</item>
        <item name = "android:textSize">25sp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textAlignment">textStart</item>
    </style>

    <!-- This Style is for item description-->
    <style name="AllText.Description">
        <item name = "android:textColor">@color/DescColor_dark</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textAlignment">textStart</item>
    </style>

    <!-- This Style is for quantity in cards -->
    <style name="AllText.Quantity">
        <item name = "android:textColor">@color/quantity_color_dark</item>
        <item name = "android:textSize">16sp</item>
        <item name = "android:textAllCaps">false</item>
        <item name = "android:textAlignment">textStart</item>
    </style>

    !--  Below are Button Styles-->
    <!-- These styles are applied to all buttons   -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/add_update_button_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="rippleColor">@color/black</item>
    </style>

    <!-- This style is for quantity reduce button -->
    <style name="ButtonStyle.ReduceButton">
        <item name="android:backgroundTint">@color/red_button_dark</item>
    </style>
    <!-- This style is for quantity increase button-->
    <style name="ButtonStyle.IncreaseButton">
        <item name="android:backgroundTint">@color/green_button_dark</item>
    </style>
</resources>